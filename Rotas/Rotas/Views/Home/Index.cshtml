@model IEnumerable<Rotas.Models.News>

@{
    ViewBag.Title = "Rotas";
}


<h2>Rotas em ASP</h2>

<div>
    <ul>
        <h5>categorias</h5>
        @foreach (string item in ViewBag.Categorias)
        {
            <li style="list-style-type:none;">
                @Html.ActionLink(item, "MostraCategoria", "Home", new { @categoria = item.ToLower() }, null)
            </li>
        }
    </ul>
</div>


<div>
    <ul>
        @foreach (var item in Model)
        {

            <li style="text-decoration:none; list-style-type:none;">
                <br />
                @Html.ActionLink(item.Titulo, "MostraNoticia", "Home", new
                {
                    @noticiaId = item.NoticiaId,
                    @categoria = item.Categoria.ToLower(),
                    @titulo = item.Titulo.ToLower()
                }, null);

                <br />

                <em>@Html.DisplayFor(modelItem => item.Categoria)</em>
                <b>@Html.DisplayFor(modelItem => item.Data)</b>
            </li>
        }
    </ul>
</div>

<hr />
<div>
    <h2>
        @Html.ActionLink("Todas as Noticias", "TodasAsNoticias", "Home")
    </h2>
</div>